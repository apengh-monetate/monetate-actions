<style>
body {
  color: #1a1a1a;
  font-family: BrandonGrotesque-Regular, -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  font-size: 14px;
  letter-spacing: 3px;
  line-height: 23px;
  margin: 0 auto;
  max-width: 600px;
  padding-top: 20px;
  text-transform: uppercase;
}

* {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

.mt-heading {
  font-size: 18px;
  font-weight: 700;
  text-align: center;
  text-transform: uppercase;
}

.mt-product {
  display: block;
  font-weight: 200;
  max-width: 300px;
  padding: 10px 10px 20px;
  text-align: center;
  vertical-align: top;
  width: 50%;
}

.mt-product__grid {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
}

.mt-product__link {
  color: #333;
  text-decoration: none;
}

.mt-product__img {
  margin-bottom: 10px;
  text-align: center;
  width: 100%;
}

.mt-product__title {
  display: block;
  margin-bottom: 6px;
}

.mt-product__desc {
  display: none;
}

.mt-product__price {
  display: none;
  font-weight: 700;
}
</style>

<h3 class="mt-heading">You May Also Like</h3>
<div class="mt-product__grid">

{% for product in recommended_products %}
<div class="mt-product">

  <a class="mt-product__link" href="{{ product.link }}&test=true">
    <img class="mt-product__img" src={{ product.image_link }} />
    <div class="mt-product__title">{{ product.title }}</div>
  </a>
  <div class="mt-product__desc">{{ product.description|truncate(30) }}</div>
  <div class="mt-product__price">{{ product.price|round(2, 'floor') }}</div>

</div>
{% endfor %}

</div>
